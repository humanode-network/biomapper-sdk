{
  "name": "@biomapper-sdk/root",
  "version": "0.1.0",
  "private": true,
  "packageManager": "yarn@4.1.0",
  "workspaces": [
    "core",
    "libraries",
    "events",
    "mock",
    "examples/*",
    "tests/hardhat"
  ],
  "scripts": {
    "prettier:check": "prettier --list-different .",
    "prettier:fix": "prettier --write .",
    "solhint:check": "solhint '**/*.sol' --max-warnings 0",
    "solhint:fix": "solhint --fix '**/*.sol'"
  },
  "devDependencies": {
    "prettier": "^3.3.1",
    "solhint": "^5.0.1"
  }
}
